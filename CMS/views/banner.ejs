<!DOCTYPE html>
<html>
<head>
    <title><%= title %></title>
    <!--忽略了public的路径-->
    <link rel='stylesheet' href='/lib/bootstrap/dist/css/bootstrap.min.css' />
    <link rel='stylesheet' href='/stylesheets/font-awesome.min.css' />
    <link rel='stylesheet' href='/stylesheets/ionicons.min.css' />
    <link rel='stylesheet' href='/lib/admin-lte/dist/css/AdminLTE.min.css' />
    <link rel='stylesheet' href='/lib/admin-lte/dist/css/skins/skin-blue.min.css' />
    <link rel='stylesheet' href='/stylesheets/style.css' />
</head>
<body class="hold-transition skin-blue sidebar-mini">
<div class="wrapper">

    <!-- Main Header -->
    <% include header.ejs %>
    <!-- Left side column. contains the logo and sidebar -->
    <% include menu.ejs %>

    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->

        <!-- Main content -->
        <section class="content">

            <!-- Your Page Content Here -->

            <div class="box">
                <div class="box-header with-border">
                    <h3 class="box-title">
                        轮播图列表
                        <button class="btn btn-sm btn-success " onclick="toAddBanner()">
                            <span class="glyphicon glyphicon-plus"></span>
                            添加
                        </button>
                    </h3>

                    <button class="btn btn-sm btn-default pull-right">导入数据</button>
                    <button class="btn btn-sm btn-info pull-right">导出数据</button>
                </div>

                <!-- /.box-header -->
                <div class="box-body">
                    <table class="table table-bordered">
                        <tr>
                            <th style="width: 10px">#</th>
                        
                            <th>bannerID</th>
                            <th>bannerName</th>
                            <th>bannerImages</th>
                            <th>bannerLinkSrc</th>
                            <th>操作</th>
                        </tr>
                       <% for(var i = 0;i<result.length;i++){ %>
                            <tr>
                                <td><%= i+1 %></td>
                              
                                <td><%= result[i].bannerID %></td>
                                <td><%= result[i].bannerName %></td>
                                <td>
                                    <img src="<%= result[i].bannerImages %>" alt="11111" style="width: 100px;">
                                </td>
                                <td><%= result[i].bannerLinkSrc %></td>
                                <td>
                                    <button class="btn btn-xs btn-warning" onclick="toUpdateBanner('<%= result[i].bannerID %>') ">
                                        <span class="glyphicon glyphicon-edit"></span>
                                        编辑
                                    </button>
                                    <button class="btn btn-xs btn-danger" onclick="toDeleteBanner('<%= result[i].bannerID %>')">
                                        <span class="glyphicon glyphicon-trash"></span>
                                        删除
                                    </button>
                                </td>
                            </tr>

                        <% } %>

                    </table>
                </div>
                <!-- /.box-body -->
                <div class="box-footer clearfix">
                    <ul class="pagination pagination-sm no-margin pull-right">
                        <li ><a  href="/banner?limitNum=4&pageCode=0">&laquo;</a></li>
                        <% for(var i = 0; i < totalPage; i++) { %>
                        <li class="<%= pageCode == i ? 'active' : ''%>"><a href="/banner?limitNum=4&pageCode=<%= i %>"><%= i+1 %></a></li>
                        <% }%>

                        <li ><a href="/banner?limitNum=4&pageCode=<%= totalPage * 1 - 1 %>">&raquo;</a></li>

                    </ul>

                </div>
            </div>
        </section>
        <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->

    <!-- Main Footer -->
    <% include footer.ejs %>


    <!-- Add the sidebar's background. This div must be placed
         immediately after the control sidebar -->
    <div class="control-sidebar-bg"></div>
</div>
<script src="/javascripts/jquery.min.js"></script>
<script src="/lib/bootstrap/dist/js/bootstrap.min.js"></script>
<script src="/javascripts/app.min.js"></script>
<script>
    function toAddBanner(){
        window.location.href='/addBanner';
    }
    function toUpdateBanner(bannerID){
        window.location.href='/updateBanner?bannerID='+bannerID;
    }
    function toDeleteBanner(bannerID){
        window.location.href='/deleteBanner?bannerID='+bannerID;
    }
</script>
</body>
</html>
